<?xml version="1.0" encoding="utf-8" ?>
<phpunit bootstrap="./vendor/autoload.php">
    <testsuites>
        <testsuite name="The project's test suite">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <blacklist>
            <directory suffix=".php">./</directory>
            <exclude>
                <directory suffix=".php">./src</directory>
            </exclude>
        </blacklist>
    </filter>
</phpunit>