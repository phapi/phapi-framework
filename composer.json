{
  "name": "ahinko/phapi",
  "description": "Phapi is a PHP based framework aiming at rapid and simplified API development as well as focusing at performance and keeping the code base small and simple.",
  "keywords": [
    "api", "framework", "phapi"
  ],
  "type": "framework",
  "version": "2.0.0-dev",
  "minimum-stability": "stable",
  "license": "MIT",
  "homepage": "https://github.com/ahinko/phapi",
  "authors": [
    {
      "name": "Peter Ahinko",
      "email": "peter@ahinko.se",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=5.5.0",
    "psr/log": "1.*",
    "psr/http-message": "0.9.*",
    "roave/security-advisories": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "4.4.*",
    "codeclimate/php-test-reporter": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Phapi\\": "src/Phapi/",
      "Phapi\\Tests\\": "tests/Phapi/"
    }
  }
}